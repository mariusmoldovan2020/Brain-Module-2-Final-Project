<!-- shows user profile, form is prepopulated and allows for edits.  -->
<!-- no edits to any posts   -->

<h1>Edit My Profile</h1>

<% if @user.errors.any?  %>
 <div id="error explanation">
 <h2>We found a few errors in your form:</h2>
 <ul>
 <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
 <% end  %>
 </ul>
<% end  %>

<%= form_for @user, url: brain_user_post_profile_update_path do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br>
<br>
<%= f.label :city %>
<%= f.text_field :city %>  <br>
<br>
<%= f.label :email %>
<%= f.text_field :email %>  <br>
<br>
<%= f.label :professional_industry %>
<%= f.text_field :professional_industry %>  <br>
<br>
<%= f.label :about_me %>
<%= f.text_field :about_me %>  <br>
<br>
<%= f.label :photo_url %>
<%= f.text_field :photo_url %>  <br>
<br>
<%= f.collection_select :category_name, @categories, :itself, :itself%>  <br>
<br>
<%= f.submit %>

<% end  %>

<h1> Delete A Post</h1>

<% @posts.each do |post| %>
  <div class="post">
   <span><%= link_to post.title, brain_user_post_path(@user.id, post.id) %></span>
   <%= form_tag brain_user_post_path(post.user, post.id), method: "delete" do %>
 <%= submit_tag "Delete" %>
  <% end %>
  </div>
<% end %>

<br>
<br>

<%= link_to "Back to My Homepage", brain_user_path(@user) %>
