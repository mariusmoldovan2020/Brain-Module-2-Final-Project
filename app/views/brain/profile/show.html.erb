
<!-- ability to "follow" the user/shows if you already follow -->
<%= link_to "Edit My Profile", brain_user_profile_edit_path(@user)  %>

<%= link_to "My Homepage", brain_user_path(@user)  %>

<h1><%= @user.name %></h1>

<%= @user.photo_url %>

<%= @user.city %>

<%= @user.email %>

<%= @user.professional_industry %>

